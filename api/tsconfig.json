{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "ES2022",
        "lib": ["ES2022"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": false,
        "outDir": "../dist",
        "rootDir": "..",
        "baseUrl": "..",
        "resolveJsonModule": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@shared/*": ["../shared/*"]
        }
    },
    "include": [
        "./**/*",
        "../server/**/*",
        "../shared/**/*"
    ],
    "exclude": [
        "../node_modules",
        "../client",
        "../dist",
        "../**/*.config.ts",
        "../**/*.test.ts",
        "../**/*.spec.ts",
        "../**/vitest.setup.ts",
        "../server/__tests__"
    ]
}